@startuml
'https://plantuml.com/class-diagram

hide circle
skinparam classAttributeIconSize 0

title Class Diagram - US14: Register Employee

class RegisterEmployeeView {
' O UI interage com o utilizador
}

class RegisterEmployeeController {
    ' Recebe pedidos do UI
    +registerEmployee(data: EmployeeDTO): EmployeeDTO
}

class EmployeeService {
    ' Contém a lógica de negócio
    +registerEmployee(data: EmployeeDTO): Employee
}

interface EmployeeRepository {
    ' Interface para persistência
    +save(employee: Employee): Employee
    +findByEmail(email: String): Employee
    +findByPhoneNumber(phone: String): Employee
}

class Employee {
    ' Entidade de domínio
    -name: String
    -phoneNumber: String
    -emailAddress: String
    -citizenCardNumber: String
}

class Role {
    ' Entidade de domínio
    -description: String
}

' Dependências entre camadas
RegisterEmployeeView ..> RegisterEmployeeController
RegisterEmployeeController ..> EmployeeService
EmployeeService ..> EmployeeRepository

' Relações de domínio
EmployeeService ..> Employee : "creates"
EmployeeRepository "1" -- "0..*" Employee : "manages"
Employee "1" --> "1" Role : "is assigned"

@enduml